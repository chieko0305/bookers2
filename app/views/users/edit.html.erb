<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg5 px-5 px-sm-0 mx-auto">
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
      <% end %>

    <h2>User Info</h2>
    <%= form_with model: @user do |f| %>
    <div class="form-group">
      <label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", class:'form-control name'%>
    </div>
    <div class="form-group">
      <label for="inputImage">Image</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", class: 'form-control-file user_image', accept: "image/*" %>
    </div>
    <div class="form-group">
      <label for="inputIntroduction">Introduction</label>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction",class:"form-control introduction" %>
    </div>
    <div class="form-group">
    <%= f.submit "Update User", class:'btn btn-secondary' %>
    </div>
    <% end %>
    </div>
  </div>
</div>